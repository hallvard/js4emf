<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.views">

      <category
            name="EMF Javascript"
            id="org.eclipse.e4.emf.javascript.ui"
            >
      </category>

      <view id="org.eclipse.e4.emf.javascript.ui.ScriptSourceView"
            name="EMF Javascript Source"
            category="org.eclipse.e4.emf.javascript.ui"
            class="org.eclipse.e4.emf.javascript.ui.ScriptSourceView"
            >
      </view>
      <view id="org.eclipse.e4.emf.javascript.ui.ScriptScrapbookView"
            name="EMF Javascript Scrapbook"
            category="org.eclipse.e4.emf.javascript.ui"
            class="org.eclipse.e4.emf.javascript.ui.ScriptScrapbookView"
            >
      </view>

   </extension>
   
  <extension point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.e4.emf.javascript.ui.EditJavascriptCommand"
            name="Edit Javascript for Selected EObject">
      </command>
   </extension>
   
   	<extension point="org.eclipse.ui.bindings">
      <key commandId="org.eclipse.e4.emf.javascript.ui.EditJavascriptCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+J"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.e4.emf.javascript.ui.EditJavascriptCommandHandler"
            commandId="org.eclipse.e4.emf.javascript.ui.EditJavascriptCommand">
      </handler>
   </extension>
   
  <extension point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
            name="Move EObject (up or down)">
            <commandParameter
                  id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta"
                  name="movementDelta"
                  optional="true">
            </commandParameter>
            <commandParameter
                  id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.shouldCopy"
                  name="shouldCopy"
                  optional="true">
            </commandParameter>
      </command>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.e4.emf.javascript.ui.NudgeEObjectCommandHandler"
            commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand">
      </handler>
   </extension>
   
	<extension point="org.eclipse.ui.bindings">
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M3+PAGE_UP"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="0x80000000"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+M3+PAGE_UP"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="0x80000000"/>
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.shouldCopy" value="true"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M3+ARROW_UP"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="-1"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+M3+ARROW_UP"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="-1"/>
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.shouldCopy" value="true"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M3+ARROW_DOWN"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="1"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+M3+ARROW_DOWN"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="1"/>
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.shouldCopy" value="true"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M3+PAGE_DOWN"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="0x7fffffff"/>
      </key>
      <key commandId="org.eclipse.e4.emf.ui.NudgeEObjectCommand"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+M3+PAGE_DOWN"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.movementDelta" value="0x7fffffff"/>
           <parameter id="org.eclipse.e4.emf.ui.NudgeEObjectCommand.shouldCopy" value="true"/>
      </key>
   </extension>
   
	<extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command commandId="org.eclipse.e4.emf.javascript.ui.EditJavascriptCommand">
            <visibleWhen>
				<with variable="activeMenuSelection">
					<count value="1"/>
					<iterate>
						<instanceof value="org.eclipse.emf.ecore.EObject"/>
					</iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

<!--
	<extension point="org.eclipse.ui.elementFactories">
    	<factory id="org.eclipse.e4.emf.javascript.ui.StringEditorInput"
			class="org.eclipse.e4.emf.javascript.ui.StringEditorInput$Factory"/>
	</extension>
-->

	<extension 	point="org.eclipse.core.resources.natures"
   		id="JavascriptNature"
	   	name="Javascript Nature">
      	<runtime>
         	<run class="org.eclipse.e4.emf.javascript.builders.JavascriptNature"/> 
     	</runtime> 
    	<builder id="org.eclipse.e4.emf.javascript.ui.JavascriptBuilder"/> 
   </extension> 

   <extension point="org.eclipse.core.resources.builders" 
   		id="JavascriptBuilder" 
   		name="Javascript Builder"> 
      	<builder hasNature="true"> 
        	<run class="org.eclipse.e4.emf.javascript.builders.JavascriptBuilder"/>
      	</builder> 
   	</extension>

   <extension point="org.eclipse.ui.views">

      <view id="org.eclipse.e4.emf.javascript.ui.EOperationInvokationView"
            name="EMF Invoke EOperation View"
            category="org.eclipse.e4.emf.javascript.ui"
            class="org.eclipse.e4.emf.javascript.ui.EOperationInvocationView"
            >
      </view>
      <view id="org.eclipse.e4.emf.javascript.ui.EOperationBodyView"
            name="EMF EOperation Body View"
            category="org.eclipse.e4.emf.javascript.ui"
            class="org.eclipse.e4.emf.javascript.ui.EOperationBodyView"
            >
      </view>

   </extension>

</plugin>
